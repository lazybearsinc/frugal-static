/* Deal Card Styles */
:root {
    --primary-color: #1A365D;
    --primary-hover: #234876;
    --secondary-color: #D0021B;
    --secondary-gradient: linear-gradient(135deg, #D0021B, #B7021B);
    --background-color: #f8f9fa;
    --text-color: #1A1A1A;
    --text-muted: #4A5568;
    --border-color: #E2E8F0;
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.06);
    --shadow-md: 0 4px 6px rgba(0,0,0,0.08);
    --shadow-hover: 0 8px 12px rgba(0,0,0,0.1);
}

.deal-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    border: 1px solid var(--border-color);
}

.deal-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
    border-color: #CBD5E0;
}

.deal-image {
    width: 100%;
    height: 220px;
    object-fit: contain;
    background: white;
    padding: 24px;
    border-bottom: 1px solid var(--border-color);
}

.deal-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.deal-saving {
    display: inline-block;
    background: var(--secondary-gradient);
    color: white;
    padding: 8px 14px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95em;
    width: fit-content;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    letter-spacing: 0.3px;
}

.deal-title {
    margin: 0;
    font-size: 1.1em;
    line-height: 1.4;
    color: var(--text-color);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-weight: 500;
}

.deal-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9em;
    color: var(--text-muted);
    margin-top: 4px;
    padding-top: 12px;
    border-top: 1px solid var(--border-color);
}

.expires {
    display: flex;
    align-items: center;
    gap: 6px;
}

.expires svg {
    width: 14px;
    height: 14px;
    stroke: currentColor;
    stroke-width: 2;
}

.item-number {
    color: var(--text-muted);
    font-size: 0.9em;
}

/* Grid Layout */
.deals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
    padding: 24px;
    max-width: 1200px;
    margin: 0 auto;
}

/* Loading State */
.deal-card.loading {
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .deals-grid {
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        padding: 16px;
        gap: 16px;
    }

    .deal-image {
        height: 200px;
        padding: 20px;
    }

    .deal-title {
        font-size: 1em;
    }

    .deal-saving {
        font-size: 0.9em;
        padding: 6px 12px;
    }

    .deal-meta {
        font-size: 0.85em;
    }
} 