/* Deal page specific styles */
.deal-detail {
    max-width: 1200px;
    margin: 20px auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: minmax(300px, 1.5fr) 2fr;
    gap: 30px;
}

.product-image-container {
    position: relative;
    top: auto;
    height: auto;
}

.product-image {
    width: 100%;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-md);
}

.product-info {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.product-title {
    font-size: 1.8em;
    margin: 0;
    line-height: 1.3;
}

.saving-badge {
    display: inline-block;
    background: var(--secondary-color);
    color: white;
    padding: 8px 16px;
    border-radius: var(--border-radius-md);
    font-size: 1.2em;
    font-weight: bold;
}

.expiration {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--secondary-color);
    font-size: 0.9em;
    padding: 8px 12px;
    background: rgba(255,107,107,0.1);
    border-radius: var(--border-radius-sm);
    width: fit-content;
}

.expiration svg {
    width: 16px;
    height: 16px;
}

.warehouse-info-detail, .item-details {
    background: white;
    padding: 15px;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-sm);
}

.share-section {
    margin-top: 15px;
    border-top: 1px solid var(--border-color);
    padding-top: 15px;
}

.share-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.share-button {
    padding: 8px 16px;
    border-radius: var(--border-radius-lg);
    color: white;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.9em;
    font-weight: 600;
    transition: transform 0.2s;
}

.share-button:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.share-button.facebook { background: #1877F2; }
.share-button.x { background: #000000; }
.share-button.instagram { background: #E4405F; }
.share-button.whatsapp { background: #25D366; }
.share-button.copy { 
    background: #666;
    margin-left: auto;
}

.cross-promotion {
    grid-column: 1 / -1;
    background: linear-gradient(135deg, var(--primary-color), #1e40af);
    color: white;
    padding: 30px;
    border-radius: var(--border-radius-sm);
    text-align: center;
    margin-top: 30px;
}

.whatsapp-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #25D366;
    color: white;
    padding: 15px 30px;
    border-radius: 30px;
    text-decoration: none;
    margin-top: 20px;
    font-weight: bold;
    font-size: 1.1em;
    transition: transform 0.2s;
}

.whatsapp-button:hover {
    transform: translateY(-2px);
}

@media (max-width: 768px) {
    .deal-detail {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .product-title {
        font-size: 1.5em;
    }

    .share-buttons {
        justify-content: center;
    }

    .share-button.copy {
        margin-left: 0;
    }
} 