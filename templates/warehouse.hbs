         crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.0/feather.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Immediate console log to verify script loading -->
    <script>
        console.log('Initial script load check');
    </script>
    
    <!-- Load warehouse locator first -->
    <script src="/js/warehouse-locator.js"></script>
    <script>
        console.log('Warehouse locator script loaded');
    </script>
    
    <!-- Load other scripts -->
    <script src="/js/adsense-config.js"></script>
    <link rel="stylesheet" href="/css/header-improvements.css">
    <style>
        /* Page-specific styles */
        {{> deal_card_styles}}

        /* Ad container styles */
        .ad-unit-container {
            width: 100%;
            margin: 1.5rem 0;
            text-align: center;
            background: #f9f9f9;
            padding: 1rem;
            border-radius: 8px;
            overflow: hidden;
            transition: min-height 0.3s ease;
        }
        
        .deal-list-top-ad {
            margin: 2rem auto;
            max-width: 970px;
        }
        
        .deal-card-ad {
            grid-column: 1 / -1;
            margin: 2rem 0;
        }
        
        /* Placeholder styling for ad containers before load */
        .ad-placeholder {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f9f9f9;
            color: #666;
            font-size: 0.9em;
        }
        
        @media (max-width: 768px) {
            .deal-card-ad {
                margin: 1rem 0;
            }
        }

        /* Warehouse selector styles */
        .warehouse-header {
            background: white;
            border-bottom: 1px solid var(--border-color);
            padding: 12px 0;
        }

        .warehouse-selector {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .current-warehouse {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .current-warehouse svg {
            width: 32px;
            height: 32px;
            color: var(--primary-color);
        }

        .warehouse-info {
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .warehouse-label {
            font-size: 0.9em;
            color: #666;
        }

        .warehouse-address {
            font-size: 1.1em;
            color: var(--text-color);
        }

        .change-warehouse {
            padding: 8px 20px;
            border: 2px solid var(--primary-color);
            border-radius: 24px;
            color: var(--primary-color);
            font-weight: 600;
            transition: all 0.2s;
            background: white;
        }

        .change-warehouse:hover {
            background: var(--primary-color);
            color: white;
        }

        @media (max-width: 768px) {
            .warehouse-selector {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }

            .change-warehouse {
                width: 100%;
                text-align: center;
            }
        }

        /* Rest of the existing styles */
        .deals-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 24px;
            padding: 24px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .filters {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 20px;
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .filter-group {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .filter-button {
            padding: 8px 16px;
            border: 1px solid var(--border-color);
            border-radius: 20px;
            background: white;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 0.9em;
            font-weight: 500;
        }

        .filter-button:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

        .filter-button.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .ad-banner {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 20px;
        }

        @media (max-width: 768px) {
            .deals-grid {
                grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
                padding: 16px;
                gap: 16px;
            }

            .filters {
                justify-content: center;
                padding: 0 15px;
            }

            .ad-banner {
                padding: 0 15px;
            }
        }

        /* Footer styles */
        .footer {
            background: white;
            border-top: 1px solid var(--border-color);
            margin-top: 40px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 48px 20px;
        }

        .footer-bottom {
            border-top: 1px solid var(--border-color);
            padding-top: 24px;
            margin-top: 24px;
        }
    </style>
</head>
<body class="bg-white">
<header>
        {{> navbar}}
    </header>
   
   
    <div class="warehouse-header">
        <div class="warehouse-selector">
            <div class="current-warehouse">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
                    <circle cx="12" cy="9" r="2" fill="currentColor"/>
                </svg>
                <div class="warehouse-info">
                    <span class="warehouse-label">Costco Warehouse Deals</span>
                    <strong class="warehouse-address">{{warehouse.address}}, {{warehouse.city}}</strong>
                </div>
            </div>
            <button class="change-warehouse" onclick="locator.showWarehouseSelectorModal(warehouses)">Change Warehouse</button>
        </div>
    </div>

    {{> deal_list_top_ad}}

    <div class="filters">
        <div class="filter-group">
            <button class="filter-button active">All Savings</button>
            <button class="filter-button">$0-$10</button>
            <button class="filter-button">$10-$50</button>
            <button class="filter-button">$50+</button>
        </div>
        <div class="filter-group">
            <button class="filter-button">Ending Soon</button>
            <button class="filter-button">Highest Savings</button>
        </div>
    </div>

    <main class="deals-grid">
        {{#each warehouse.deals}}
            <a href="/costco-deals/{{../warehouse.slug}}/{{this.slug}}" class="deal-card">
                <img src="{{this.imageUrl}}" 
                     alt="{{this.title}}" 
                     class="deal-image"
                     onerror="this.src='/images/placeholder.svg'">
                <div class="deal-content">
                    <div class="deal-saving">Save {{this.savings}}</div>
                    <h3 class="deal-title">{{this.title}}</h3>
                    <div class="deal-meta">
                        <span class="expires">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M12 6v6l4 2"/>
                            </svg>
                            {{#if this.daysLeft}}
                                {{this.daysLeft}} days left
                            {{else}}
                                Ends {{formatDate this.endDate}}
                            {{/if}}
                        </span>
                        <span class="item-number">#{{this.itemNumber}}</span>
                    </div>
                </div>
            </a>
            {{#if (and (not @first) (eq (mod @index 6) 5))}}
                {{> deal_card_ad}}
            {{/if}}
        {{/each}}
    </main>

    <script>
        console.log('Starting main script execution');
        
        // Initialize Feather icons
        feather.replace();

        // Initialize warehouse data and current warehouse ID
        const currentWarehouse = {
            id: '{{warehouse.id}}',
            slug: '{{warehouse.slug}}',
            city: '{{warehouse.city}}',
            address: '{{warehouse.address}}',
            lat: {{warehouse.lat}},
            lon: {{warehouse.lon}}
        };
        const warehouses = {{{json allWarehouses}}};
        let locator = new WarehouseLocator();

        // Only save current warehouse to localStorage if none exists
        if (!locator.getSelectedWarehouse()) {
            console.log('No warehouse in localStorage, setting current warehouse');
            locator.setSelectedWarehouse(currentWarehouse);
        }

        // Handle change warehouse button
        document.querySelector('.change-warehouse').addEventListener('click', function() {
            locator.showWarehouseSelectorModal(warehouses);
        });

        // Get user location to show distance
        locator.getUserLocation().then(userLocation => {
            if (userLocation && currentWarehouse.lat && currentWarehouse.lon) {
                const distance = locator.haversineDistance(
                    userLocation.lat,
                    userLocation.lon,
                    currentWarehouse.lat,
                    currentWarehouse.lon
                );
                
                if (distance !== null) {
                    const warehouseLabel = document.querySelector('.warehouse-label');
                    if (warehouseLabel) {
                        warehouseLabel.textContent = `Your Costco Warehouse (${distance.toFixed(1)} km away)`;
                    }
                }
            }
        }).catch(error => {
            console.error('Error getting user location:', error);
        });

        // Responsive ad placement with lazy loading
        function adjustAdPlacement() {
            const dealCards = document.querySelectorAll('.deal-card');
            const adContainers = document.querySelectorAll('.deal-card-ad');
            
            // Remove existing ads
            adContainers.forEach(ad => ad.remove());
            
            const isMobile = window.innerWidth <= 768;
            const adInterval = isMobile ? 3 : 6;
            
            dealCards.forEach((card, index) => {
                if (index > 0 && (index + 1) % adInterval === 0) {
                    const adContainer = createAdUnit('dealCard');
                    card.after(adContainer);
                    lazyLoadAd(adContainer.querySelector('.adsbygoogle'));
                }
            });
        }

        // Initialize top ad
        window.addEventListener('DOMContentLoaded', () => {
            const topAdContainer = document.querySelector('.deal-list-top-ad');
            if (topAdContainer) {
                createAdUnit('dealListTop', topAdContainer);
                lazyLoadAd(topAdContainer.querySelector('.adsbygoogle'));
            }
        });

        // Initial card ad placement
        window.addEventListener('load', () => {
            adjustAdPlacement();
        });
        
        // Debounced resize handler
        let resizeTimer;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(() => {
                adjustAdPlacement();
            }, 250);
        });
    </script>

