    <script>
        // Social sharing functionality
        function shareDeal(platform) {
            const url = encodeURIComponent(window.location.href);
            const title = encodeURIComponent('{{deal.title}} - Save {{deal.savings}} at Costco {{warehouse.city}}');
            
            let shareUrl;
            switch(platform) {
                case 'facebook':
                    shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                    break;
                case 'twitter':
                    shareUrl = `https://twitter.com/intent/tweet?url=${url}&text=${title}`;
                    break;
                case 'whatsapp':
                    shareUrl = `https://wa.me/?text=${title}%20${url}`;
                    break;
            }
            
            if (shareUrl) {
                window.open(shareUrl, '_blank', 'width=600,height=400');
            }
        }

        // Copy link functionality
        function copyDealLink() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(() => {
                const button = document.querySelector('.share-button.copy');
                const originalText = button.textContent;
                button.textContent = 'Copied!';
                setTimeout(() => {
                    button.innerHTML = `
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
                        </svg>
                        Copy Link
                    `;
                }, 2000);
            });
        }

        // Initialize ads
        window.addEventListener('DOMContentLoaded', () => {
            // Initialize in-article ad
            const detailAdContainer = document.querySelector('.deal-detail-ad');
            if (detailAdContainer) {
                createAdUnit('dealDetailInArticle', detailAdContainer);
                lazyLoadAd(detailAdContainer.querySelector('.adsbygoogle'));
            }
            
            // Initialize bottom bar ad
            const bottomAdContainer = document.querySelector('.deal-detail-bottom-ad');
            if (bottomAdContainer) {
                createAdUnit('dealDetailBottom', bottomAdContainer);
                
                // Add close button functionality
                const closeButton = bottomAdContainer.querySelector('.close-button');
                closeButton.addEventListener('click', () => {
                    bottomAdContainer.classList.add('hidden');
                    document.body.classList.add('no-bottom-ad');
                });
                
                // Show ad after a delay
                setTimeout(() => {
                    lazyLoadAd(bottomAdContainer.querySelector('.adsbygoogle'));
                }, 2000);
            }
        });
    </script>

    <script src="/js/enhanced-warehouse.js"></script>
